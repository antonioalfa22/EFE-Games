<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sudoku.SudokuOptionsActivity">


    <TextView
        android:id="@+id/txtTictactoe"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Tres en raya"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtModeTictactoe"
        app:layout_constraintVertical_bias="0.06999999">

        <RadioButton
            android:id="@+id/rdAILimited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contra el robot" />

        <RadioButton
            android:id="@+id/rdAIInfinite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contra el robot hasta la victoria" />

        <RadioButton
            android:id="@+id/rd1v1Limited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 contra 1" />

        <RadioButton
            android:id="@+id/rd1v1Infinite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 contra 1 hasta la victoria" />

    </RadioGroup>

    <TextView
        android:id="@+id/txtModeTictactoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo de juego"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTictactoe"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/btPlayTicTacToe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.29000002" />


</androidx.constraintlayout.widget.ConstraintLayout>